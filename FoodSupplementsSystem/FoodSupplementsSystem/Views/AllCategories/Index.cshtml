@model IList<FoodSupplementsSystem.ViewModels.AllCategories.CategoryViewModel>

@foreach (var category in Model)
{
    <div class="col-md-6">
        <b><h3>@category.Name</h3></b>

        @if (category.Supplements.Count != 0)
        {
            <p>All registered supplements in this category!</p>
        }
        else
        {
            <p>No supplements.</p>
        }

        @foreach (var supplement in category.Supplements)
        {
            <a href="/AllSupplements/Details/3"><img src="@Url.Content(supplement.ImageUrl)" alt="alternative text" /></a>
            <div>@supplement.Name</div>
        }
    </div>
}


