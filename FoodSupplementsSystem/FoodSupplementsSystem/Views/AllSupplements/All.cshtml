
@using Kendo.Mvc.UI
@using FoodSupplementsSystem.ViewModels.AllSupplements
@model int?
@{
    ViewBag.Title = "All";
}

@using (Html.BeginForm("All", "AllSupplements", FormMethod.Get))
{
    @(Html.Kendo()
        .DropDownList()
        .Name("category")
        .HtmlAttributes(new { style = "width: 100%" })
        .DataTextField("Text")
        .DataValueField("Value")
        .OptionLabel("Choose category")
        .DataSource(dataSource =>
        {
            dataSource.Read(read => read.Action("GetCategories", "AllSupplements"));
        }))

    <input type="submit" class="btn btn-default" />
}
<br />
<br />


<div class="container">
    <div class="row k-header">

        <div class="col-md-2 text-center">
            <h3>Name</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Category</h3>
        </div>
        <div class="col-md-2 text-center">
            <h3>Brand</h3>
        </div>
        <div class="col-md-3 text-center">
            <h3>Topic</h3>
        </div>
    </div>
</div>
<br />

@(Html.Kendo()
    .ListView<ListSupplementViewModel>()
    .TagName("div")
    .Name("all-supplements")
    .Pageable()
    .ClientTemplateId("all-supplements-template")
    .DataSource(dataSource =>
    {
        dataSource
            .ServerOperation(true)
            .PageSize(5)
            .Read(read => read.Action("ReadSupplements", "AllSupplements", new { category = Model }));
    }))

<script id="all-supplements-template" type="text/x-kendo-tmpl">
    <div class="row">
        <div class="col-md-3 text-center">
            #= Id #
        </div>
        <div class="col-md-3 text-center">
            #= SupplementName #
        </div>
    </div>
    <br />
</script>