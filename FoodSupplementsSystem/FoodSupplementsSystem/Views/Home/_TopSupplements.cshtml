@model IList<FoodSupplementsSystem.ViewModels.AllCategories.SupplementViewModel>

<br />
<div class="text-center"><h1>Last 3 Supplements</h1></div>

@foreach (var supplement in Model)
{
    <div class="col-md-4">
        <a href="/AllSupplements/Details/@supplement.Id"><img src="@Url.Content(supplement.ImageUrl)" alt="alternative text" /></a>
        <h3>@supplement.Name</h3>
    </div>
}
<hr />
