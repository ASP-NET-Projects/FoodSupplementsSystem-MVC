@model IList<FoodSupplementsSystem.ViewModels.Home.TopicViewModel>
@{ var topics = Model.Count / 3 == 0 ? Model.Count : Model.Count / 3;}
@for (int i = 0; i < topics; i++)
{
    <div class="row">
        @for (int j = 0; j < 3; j++)
        {
            var currentTopic = 3 * i + j;
            if (currentTopic == Model.Count)
            {
                break;
            }
            <div class="col-md-4">
                <h2 style="word-wrap: break-word">@Model[currentTopic].Name</h2>
                <div>
                    <strong>Description: </strong>@Model[currentTopic].Description
                </div>
                <div>
                    @Model[currentTopic].NumberOfComments Comment(s)
                </div>
                <div>
                    @Model[currentTopic].NumberOfSupplements Supplement(s)
                </div>
                <a href="/AllTopics/Details/@Model[currentTopic].Id" class="btn btn-default">More Details...</a>
            </div>
        }
    </div>
}