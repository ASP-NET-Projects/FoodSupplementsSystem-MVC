@(Html.Kendo().Grid<FoodSupplementsSystem.Areas.Administration.ViewModels.Brands.BrandViewModel>()
      .Name("grid")
      .Columns(columns =>
      {
          columns.Bound(c => c.Name);
          columns.Bound(c => c.WebSite);
          columns.Command(command => { command.Edit(); command.Destroy(); }).Width(180);
      })
      .ToolBar(toolbar =>
      {
          toolbar.Create().Text("Add brand");
      })
      .ColumnMenu()
      .Editable(editable => editable.Mode(GridEditMode.PopUp))
      .Pageable(pager => pager.Refresh(true))
      .Sortable(sortable =>
      {
          sortable.SortMode(GridSortMode.SingleColumn);
      })
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model => model.Id(p => p.Id))
          .Read(read => read.Action("Brands_Read", "Brands"))
          .Create(create => create.Action("Brands_Create", "Brands"))
          .Update(update => update.Action("Brands_Update", "Brands"))
          .Destroy(destroy => destroy.Action("Brands_Destroy", "Brands"))
      )
)
